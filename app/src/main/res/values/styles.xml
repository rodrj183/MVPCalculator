<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <!-- Base calculator button. -->
    <style name="BaseCalculatorButton">
        <item name="android:textSize">@dimen/baseCalculatorButtonTextSize</item>
        <item name="android:layout_height">@dimen/baseCalculatorButtonLayoutHeight</item>
        <item name="android:layout_columnWeight">@integer/baseCalculatorButtonLayoutWeight</item>
        <item name="android:layout_width">@dimen/baseCalculatorButtonLayoutWidth</item>
        <item name="android:textColor">@color/colorCalculatorButtonText</item>
    </style>

    <!-- Calculator numeric button. -->
    <style name="NumericButton" parent="BaseCalculatorButton">
        <item name="android:background">@color/colorCalculatorNumericButton</item>
    </style>

    <!-- Calculator operator button. -->
    <style name="OperatorButton" parent="BaseCalculatorButton">
        <item name="android:background">@color/colorCalculatorOperatorButton</item>
    </style>

    <!-- Calculator buttons grid layout style. -->
    <style name="CalculatorButtonsGrid">
        <item name="android:rowCount">@integer/calculatorButtonGridLayoutRowCount</item>
        <item name="android:columnCount">@integer/calculatorButtonGridLayoutColumnCount</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">@bool/calculatorButtonGridLayoutBottomAlignment</item>
    </style>

    <!-- Calculator input field layout style -->
    <style name="CalculatorInputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/calculatorInputFieldLayoutHeight</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">@dimen/calculatorInputFieldTextSize</item>
    </style>

</resources>
